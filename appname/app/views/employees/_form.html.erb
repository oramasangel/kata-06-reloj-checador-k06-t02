  <% end %>

  <div class="row g-3">
  
    <div class="col-12">
      <label for="inputAddress" class="form-label">Numero de Empleado</label>      
      <%= form.number_field :num_employee, :class => "form-control"%>
    </div>

    <div class="col-12">
      <label for="inputAddress2" class="form-label">Numero Privado</label>      
      <%= form.number_field :private_num, :class => "form-control" %>
    </div>
    
    <div class="col-md-6">
      <label for="inputEmail4" class="form-label">Nombre</label>      
      <%= form.text_field :name, :class => "form-control" %>
    </div>

    <div class="col-md-6">
      <label for="inputPassword4" class="form-label">Email</label>      
      <%= form.text_field :email, :class => "form-control" %>
    </div>

    <div class="col-12">
      <label for="inputAddress2" class="form-label">Posici√≥n</label>      
      <%= form.text_field :position, :class => "form-control" %>
    </div>

    <div class="col-12">
      <div class="form-check">        
        <%= form.check_box :status, :class => "form-check-input" %>
        <label class="form-check-label" for="gridCheck">
          Estatus Activo
        </label>
      </div>
    </div>

    <div class="actions col-12">      
      <% if action_name=="edit"  %>          
          <%= form.submit "Actualizar empleado", :class => "btn btn-primary" %>
        <% else %>
          <%= form.submit "Crear empleado", :class => "btn btn-primary" %>         
